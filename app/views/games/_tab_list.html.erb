<!--tab start -->
<div class="tab_box">
  <div class="tab_content" style="width:633px;">
    <div class="sort_tabsection">
      <ul>
        <li><a href="JavaScript:void(0);" class="select">Popular games</a></li>
        <li><a href="JavaScript:void(0);">New games</a></li>
        <!--<li><a href="JavaScript:void(0);">Best bonus</a></li>-->
        <li><a href="JavaScript:void(0);">A-Z</a></li>
      </ul>
    </div>
  </div>
  <div class="clr"></div>
  <div class="tab_details">
    <!--tab news start Popular-->
    <div class="tab_inner active">
      <div class="sorted_display">
        <% if @games.present? && @games.any? %>
            <% @games.try(:order, counter: :desc).each do |game| %>
                <%= render partial: "games/game", locals: {game: game} %>
            <% end %>
        <% else %>
            <p class="big text-center"><%=t("game.s.not_found")%></p>
        <% end %>

        <div class="clr"></div>
      </div>
    </div>
    <!--tab news end -->
    <!--tab comment start New Games-->
    <div class="tab_inner">
      <div class="sorted_display">
        <% if @games.present? && @games.any? %>
            <% @games.order(created_at: :desc).each do |game| %>
                <%= render partial: "games/game", locals: {game: game} %>
            <% end %>
        <% else %>
            <p class="big text-center"><%=t("game.s.not_found")%></p>
        <% end %>

        <div class="clr"></div>
      </div>
    </div>
    <!--tab comment end -->
    <!--tab comment start A-Z -->
    <div class="tab_inner">
      <div class="sorted_display">
        <% if @games.present? && @games.any? %>
            <% @games.try(:order, :title).each do |game| %>
                <%= render partial: "games/game", locals: {game: game} %>
            <% end %>
        <% else %>
            <p class="big text-center"><%=t("game.s.not_found")%></p>
        <% end %>

        <div class="clr"></div>
      </div>
    </div>
    <!--tab comment end -->
  </div>
</div>

<!--tab end -->