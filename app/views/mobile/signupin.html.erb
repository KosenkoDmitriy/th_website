<div class="mobile_signup_container">

  <div class="row">
    <div class="col-xs-12">
      <%= render partial: "shared/errors_flash" %>
      <%= render partial: "shared/errors", locals: {obj: @user} %>

      <a href="uniwebview://close" class="btn btn-default">X CLOSE</a>
      <a href="<%= sign_in_up_path %>" class="btn btn-default">full website</a>

    </div>
  </div>


  <div class="row">
    <div class="col-xs-12 col-sm-6 mobile_signup">
      <%= link_to image_tag("facebook_signup", class: 'col-xs-12'), '/auth/facebook', class: '' %>

      <h1 class="bg-red2 text-center">Or <%= t("sign.up") %> with Email</h1>

      <!--<h2 class="text-center"><i class="glyphicon glyphicon-log-in"></i> <%= t("register") %></h2>-->
      <%= render partial: "shared/sign_up_form" %>
      <br>
    </div>

    <div class="col-xs-12 col-sm-6 mobile_signup">
      <%= link_to image_tag("facebook_signin", class: 'img-responsive col-xs-12'), '/auth/facebook', class: '' %>

      <h1 class="bg-red2 text-center">Or <%= t("sign.in") %> with Email</h1>

      <!--<h2 class="text-center"><i class="glyphicon glyphicon-log-in"></i> <%= t("login") %></h2>-->
      <%= render partial: "shared/sign_in_form" %>
      <br>
    </div>
  </div>

</div>
