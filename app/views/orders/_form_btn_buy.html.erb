<% if object.present? && current_user.present? %>
    <%= form_for(object, url: user_orders_path(current_user), html: {class: "form-horizontal", role: "form"}) do |f| %>
        <%= hidden_field_tag :credit_id, credit.try(:id) %>
        <tr>
          <td>
            <%= credit.try(:cost_in_cents)/100 rescue 0 %>
          </td>
          <td>
            <%= credit.try(:credits).try(:to_i) %>
          </td>
          <td>
            <%= f.submit btn_label, class: "btn btn-green btn-group-justified" %>
          </td>
        </tr>
    <% end %>
<% else %>
    <tr>
      <td>
        <%= credit.try(:cost_in_cents)/100 rescue 0 %>
      </td>
      <td>
        <%= credit.try(:credits).try(:to_i) %>
      </td>
      <td>
        <%= link_to btn_label, signin_path, class: "btn btn-green btn-group-justified" %>
      </td>
    </tr>
<% end %>