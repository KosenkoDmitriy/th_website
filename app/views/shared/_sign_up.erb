<div class="bg-black">
  <!--<h4 class="text-center dark" id="sign_in_up">Sign In / Sign Up</h4>-->
  <div class="row" id="sign_up_in">
    <div class="col-xs-12">
      <%= render partial: "shared/errors_flash" %>
      <%= render partial: "shared/errors", locals: {obj: @user} %>

      <!-- Nav tabs -->
      <ul class="nav nav-pills nav-justified" role="tablist">
        <li role="presentation" class="">
          <a href="#sign_in" aria-controls="home" role="tab" data-toggle="tab">
            <%= t("sign.in") %>
          </a>
        </li>
        <li role="presentation" class="active">
          <a href="#sign_up" aria-controls="profile" role="tab" data-toggle="tab">
            <%= t("sign.up") %>
          </a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content" id="">
        <div role="tabpanel" class="tab-pane" id="sign_in">
          <!--Sign In-->
          <h2 class="text-center"><i class="glyphicon glyphicon-log-in"></i> <%= t("login") %></h2>
          <%= render partial: "shared/sign_in_form" %>
        </div>
        <div role="tabpanel" class="tab-pane active" id="sign_up">
          <h2 class="text-center"><i class="glyphicon glyphicon-log-in"></i> <%= t("register") %></h2>
          <%= render partial: "shared/sign_up_form" %>
        </div>
      </div>
    </div>
  </div>
</div>