<% input_class = request.fullpath == mobile_signup_path ? '' : 'btn'
   input_class += " form-control"
%>

<%= form_for(@user_empty, url: signup_path, html: {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <%= f.text_field :full_name, class: input_class, placeholder: t("user.full_name"), tabindex: "5" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: input_class, placeholder: t("user.email"), tabindex: "6" %>
    </div>

    <div class="form-group">
      <%= f.text_field :phone_number, class: input_class, placeholder: t("user.phone"), tabindex: "7" %>
    </div>

    <div class="form-group ">
      <%= f.password_field :password, class: input_class, placeholder: t("user.password"), tabindex: "8" %>
    </div>

    <div class="form-group">
      <%= f.password_field :confirm_password, class: input_class, placeholder: t("user.confirm_password"), tabindex: "9" %>
    </div>

    <div class="form-group">
      <%= show_simple_captcha %>
    </div>

    <div class="form-group ">
      <%= f.submit t("user.go"), class: "btn btn-lg btn-green btn-group-justified", tabindex: "10" %>
    </div>
<% end %>