<%= form_for(@user_empty, url: signup_path, html: {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
      <%= f.text_field :full_name, class: "form-control", placeholder: t("user.full_name"), tabindex: "5" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: t("user.email"), tabindex: "6" %>
    </div>

    <div class="form-group">
      <%= f.text_field :phone_number, class: "form-control", placeholder: t("user.phone"), tabindex: "7" %>
    </div>

    <div class="form-group ">
      <%= f.password_field :password, class: "form-control", placeholder: t("user.password"), tabindex: "8" %>
    </div>

    <div class="form-group">
      <%= f.password_field :confirm_password, class: "form-control", placeholder: t("user.confirm_password"), tabindex: "9" %>
    </div>

    <div class="form-group">
      <%= f.simple_captcha :label => "Enter numbers.." %>
      <% show_simple_captcha(object: :user) %>
    </div>

    <div class="form-group ">
      <%= f.submit t("user.go"), class: "btn btn-lg btn-green btn-group-justified", tabindex: "10" %>
    </div>
<% end %>