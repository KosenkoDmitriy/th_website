<style type="text/css">
  .simple_captcha{
      border: 0px solid #ccc;
      padding: 5px !important;
  }
  .simple_captcha,
  .simple_captcha div{
      display: table;
      width:100%;
      text-align: center;
      color:black;
  }
  .simple_captcha .simple_captcha_field,
  .simple_captcha .simple_captcha_image{
      border: 1px solid #ccc;
      margin: 0px 0px 2px 0px !important;
      padding: 5px !important;
  }
  .simple_captcha .simple_captcha_image img{
    margin: 0px !important;
    padding: 0px !important;
    width: 240px !important;
    height: 40px !important;
  }
  .simple_captcha .simple_captcha_label{
      font-size: 1.0em;
      font-style: italic;
  }
  .simple_captcha .simple_captcha_field input{
    width: 100% !important;
    font-size: 2em;
    border: none;
    background-color: transparent;
    text-align: center;
  }
  .simple_captcha a {
    color:#009900;
  }
</style>

<div class='simple_captcha col-xs-12'>
  <div class='simple_captcha_image'>
    <%= simple_captcha_options[:image] %>
  </div>

  <div class='simple_captcha_field'>
    <%= simple_captcha_options[:field] %>
  </div>

  <div class='simple_captcha_label'>
    <%= simple_captcha_options[:label] %>
  </div>

  <!--<div class='simple_captcha_refresh_button'>-->
    <!--<%#= simple_captcha_options[:refresh_button] #%>-->
  <!--</div>-->
</div>
